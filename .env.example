# =============================================================================
# Savdhaan AI — Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# App
APP_NAME=savdhaan-ai
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
SECRET_KEY=change-me-to-a-random-64-char-string

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://savdhaan:savdhaan@localhost:5432/savdhaan
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI — Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL_FAST=claude-sonnet-4-6
CLAUDE_MODEL_COMPLEX=claude-opus-4-6

# OCR — Google Cloud Vision (primary)
GOOGLE_VISION_API_KEY=your-google-vision-api-key
# Set to "tesseract" to use local Tesseract fallback
OCR_PROVIDER=tesseract

# Threat Intelligence
GOOGLE_SAFE_BROWSING_KEY=your-google-safe-browsing-key
PHISHTANK_API_KEY=your-phishtank-api-key
SPAMHAUS_DQS_KEY=your-spamhaus-dqs-key
URLHAUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_FREE=10
RATE_LIMIT_PREMIUM=100
RATE_LIMIT_WINDOW_SECONDS=3600

# Content Retention
RAW_CONTENT_RETENTION_HOURS=1

# S3 / MinIO (object storage)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=savdhaan-cards
S3_REGION=us-east-1
